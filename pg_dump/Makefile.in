PGFILEDESC = "bdr_dump - backup and restore PostgreSQL databases"
PGAPPICON=win32

USE_PGXS=1
PG_CONFIG := @PG_CONFIG@
PGXS := $(shell $(PG_CONFIG) --pgxs)

PG_CPPFLAGS = -I$(libpq_srcdir)
SHLIB_LINK = $(libpq)

include $(PGXS)

OBJS=	pg_backup_archiver.o pg_backup_db.o pg_backup_custom.o \
	pg_backup_null.o pg_backup_tar.o pg_backup_directory.o \
	pg_backup_utils.o parallel.o compress_io.o dumputils.o $(WIN32RES)

KEYWRDOBJS = keywords.o

all: bdr_dump

bdr_dump: pg_dump.o common.o pg_dump_sort.o $(OBJS) $(KEYWRDOBJS) | submake-libpq submake-libpgport
	echo $(CPPfLAGS)
	echo $(CFLAGS)
	$(CC) $(CFLAGS) pg_dump.o common.o pg_dump_sort.o $(KEYWRDOBJS) $(OBJS) $(libpq_pgport) $(LDFLAGS) $(LDFLAGS_EX) $(LIBS) -o $@$(X)

clean distclean maintainer-clean:
	rm -f bdr_dump$(X) $(OBJS) pg_dump.o common.o pg_dump_sort.o kwlookup.c $(KEYWRDOBJS)
