additional-clean:
	rm -f bdr_init_copy$(X) bdr_init_copy.o
	rm -f bdr_version.h
	rm -f .distgitrev
	rm -rf tmp_check
	rm -rf scripts/bdr_initial_load
	rm -f bdr_dump$(X) $(DUMPOBJS)
	rm -f extsql/bdr--0.[89].0.[0-9].sql
