pg_dump_dir:
	mkdir -p pg_dump

bdr_dump: pg_dump_dir $(DUMPOBJS)
	$(CC) $(CFLAGS) $(DUMPOBJS) $(libpq_pgport) $(LDFLAGS) $(LDFLAGS_EX) $(LIBS) $(BDR_DUMP_LIBS) -o $@$(X)

